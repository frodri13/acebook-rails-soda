<section class="section">
  <div class="container">

  <% if logged_in? %>

  <%= link_to "New Post", new_post_path %>

    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="content">
          <% if post.image.attached? %>
            <%= image_tag(post.image, style:"width:30%") %>
          <% end %>
          <%= post.message %>
          <a href="/posts/<%= post.id %>/like">Like</a>
          <% if post.likes > 1 || post.likes == 0 %>
            <p><%= post.likes %> likes</p>
            <% else %>
            <p><%= post.likes %> like</p>
          <% end %>
          <%= link_to "Edit", edit_post_path(post) %>
          <%= button_to "Delete", post, method: :delete %>
          </div>
          <!-- <div class="comment-count">
            <span class="tag is-rounded"><%# comment count %></span>
          </div> --> 
        </div>
      </div>
    <% end %>
  </div>

  <% else%>
    <% flash.now[:danger] = link_to "You are not logged in. Please, login here", login_path %>
  <% end %>
</section>