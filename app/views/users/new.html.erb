<% provide(:title, 'Sign up') %>

<div class="column is-half is-offset-one-quarter">
  <div class="box">
    <h1 class="title has-text-centered">Sign up</h1>
    <div class="field">
      <%= form_for(@user) do |f| %>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input", type: "name" %>

        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input", type: "email", placeholder: "alex@example.com" %>

        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input", type: "password", placeholder: "********" %>

        <%= f.label :password_confirmation, "Confirmation", class: "label" %>
        <%= f.password_field :password_confirmation, class: "input", type: "password", placeholder: "********" %>
    </div>
        <%= f.submit "Create my account", class: "button is-primary is-fullwidth" %>
      <% end %>
  </div>
</div>